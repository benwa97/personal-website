---
const message = "Pardon the dust. This site is under construction.";
---

<div class="under-construction-wrapper">
  <div class="under-construction-banner">
    <!-- Overlay container -->
    <div class="banner-content">
      <div class="banner-text">
        <span class="construction-icon">‚ö†Ô∏èüöß</span>
        <span class="message">{message}</span>
      </div>
      <button
        class="dismiss-btn"
        onclick="this.closest('.under-construction-wrapper').style.display='none'; document.getElementById('banner-spacer').style.display='none';"
        aria-label="Close banner"
      >
        ‚úñ
      </button>
    </div>
  </div>
</div>

<!-- Spacer to push content down -->
<div id="banner-spacer"></div>

<style>
    .under-construction-wrapper {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}

.under-construction-banner {
  display: flex;
  justify-content: center; /* center the overlay */
  align-items: center;
  background: repeating-linear-gradient(
    45deg,
    #f59e0b 0,
    #f59e0b 15px,
    #000000 15px,
    #000000 30px
  );
  padding: 1rem 0;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.banner-content {
  display: flex;
  align-items: center;
  justify-content: space-between; /* text left/center, button right */
  background: rgba(0, 0, 0, 0.6); /* overlay */
  padding: 0.5rem 1rem;
  border-radius: 6px;

  /* Dynamic sizing */
  max-width: 90%;
  width: 100%;
  margin: 0 auto;
  color: #ffeb3b;
}

.banner-text {
  display: flex;
  align-items: center;
  justify-content: center; /* center text horizontally inside text area */
  gap: 1rem;
  flex: 1; /* take remaining space so button is pushed right */
}

.banner-text .message {
  font-weight: bold;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.8);
}

.construction-icon {
  font-size: 1.5rem;
}

.dismiss-btn {
  background: transparent;
  border: none;
  color: #ffeb3b;
  font-size: 1.25rem;
  cursor: pointer;
  margin-left: 1rem;
}

#banner-spacer {
  height: 75px; /* match banner height */
}

/* Mobile responsive */
@media (max-width: 480px) {
  .banner-content {
    flex-direction: column;
    gap: 0.25rem;
  }

  .banner-text {
    justify-content: center;
  }

  .dismiss-btn {
    align-self: flex-end; /* keep button visually right-aligned */
  }
}
</style>
